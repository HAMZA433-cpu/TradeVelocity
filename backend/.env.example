# Database (Render fournira automatiquement DATABASE_URL depuis PostgreSQL)
DATABASE_URL=postgresql://username:password@host:port/database

# Flask Secret Key (IMPORTANT: Générer une clé aléatoire sécurisée)
SECRET_KEY=your-production-secret-key-change-this-to-random-string

# Google Gemini AI
GEMINI_API_KEY=your-gemini-api-key-from-google-ai-studio

# Google OAuth (pour login Google)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Frontend URL (pour CORS et OAuth callback)
FRONTEND_URL=https://your-app.vercel.app

# Port (Render le définit automatiquement, ne pas modifier en production)
PORT=5000

# Python Version (pour Render)
PYTHON_VERSION=3.11.0
